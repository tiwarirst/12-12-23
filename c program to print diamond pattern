#include<stdio.h>
int main()
{
    int n;
    printf("enter the number of lines");
    scanf("%d",&n);
    for (int i=1;i<=n;i++){
    for (int j=n;j>=i;j--)
    { 
     printf(" "); 
    }
    for(int k=1;k<=i;k++)
    {printf("*");}
    for(int k=1;k<=i;k++)
    {printf("*");}
    printf("\n");}
    for(int l=n+1;l<=2*n;l++)
    {
        for(int m=n+1;m<=l;m++)
       { printf(" ");}
       for(int c=2*n;c>=l;c--)
      { printf("*");}
    for(int c=2*n;c>=l+1;c--)
      { printf("*");}
        printf("\n");
    }
    return 0;
}
