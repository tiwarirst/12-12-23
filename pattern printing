#include <stdio.h>
int main()
{
    int n;
    printf("enter the number of lines :");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for(int j=n;j>=i;j--)
        {
        printf("%d ",j);}
        for(int k=1;k<i;k++)
      {  printf("  ");}
        for(int l=n;l>=i;l--)
        {
        printf("%d ",l);}
       printf("\n");
    }
    return 0;
    
}
